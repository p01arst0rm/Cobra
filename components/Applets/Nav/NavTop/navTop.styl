
/* fix for margin boosting */
#navtop-container {
  overflow: hidden;
  /* fix for pop in */
  #navtop-wrapper {
    max-height: 0;  
  }
}

#navtop-wrapper {
  background: #a50668;
  width: 100%;
  text-align: center;
  .nav-link {
    width: 100%;
    text-decoration: none;
    display: block;
    font-weight: bold;
    color: #ffffff;
    font-size: 1em;
    padding-top: .4em;
    padding-bottom: .4em;  
    &.router-link-active {
      color: #a2a3d9;
    }
  }
}

#topnav-wrapper.open, #topnav-wrapper.closed {
  display: inline-block;
}