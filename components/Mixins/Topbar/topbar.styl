@import '~@/assets/styles/themes/header.styl'

#topbar-wrapper {   
  
  .topbar {
    background: headerBackground;
    font-family: headerFontFamily;
    display: flex;
    flex-wrap: nowrap;
    justify-content: center;
    flex-direction: row;
    align-items: center;
    overflow-x: hidden;
    
    > * {
      padding: 1em 2em;
    }
    .title {
      flex: 1 0 auto;
      a {
        color: headerColour;
        text-decoration: none;
        font-weight: bold;
        font-size: 2em;
      }
    }
    .sidebar-toggle {
      float: right;
    } 
  }
}

#app.desktop {
  .topbar {
    .sidebar-toggle {
      width: 0em;
    }
  }
}

#app.mini {
  .topbar {
    .sidebar-toggle {
      width: 1em;
    }
  }
}

#app.mobile {
  .topbar {
    #sidebar-toggle {
      max-width: 0em;
    }
  }
}
