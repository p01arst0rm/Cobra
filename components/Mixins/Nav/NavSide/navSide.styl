@import '~@/assets/styles/themes/nav/nav.styl'

@import '~@/assets/mixins/minWidth.styl'

/* fix for margin boosting */
#navside-container {
  display:inline-block;
  overflow: hidden;

  /* fix for pop in */
  #navside-wrapper {
    max-width: 0; 
  }
  
  @media minWidthDesktopMixin {
    #navside-wrapper {
      max-width: 100%;
      padding-left: 2rem;
      padding-right: 2rem;
    }
  }
}

#navside-wrapper {
  display:inline-block;
  overflow: hidden;
  flex: 1;
  height: 100%;
  background: navBackground;
  .nav-link {
    text-decoration: none;
    display: block;
    font-weight: bold;
    color: navColor;
    font-size: 1rem;
    padding-top: .8rem; 
    &.nuxt-link-active {
      color: navLinkActiveColor;
    }
  }
}
