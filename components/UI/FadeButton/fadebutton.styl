.animated-button .fade-button {
    text-decoration: none;
    font-size: 1rem;
    padding: .5rem 1rem;
    border-radius: 1rem;
    border: solid #ffffff;
    color: #000000
}

.animated-button .fade-button:hover,
.animated-button .fade-button:focus {
    background: blue;
    color: #ffffff;
}

.animated-button .fade-button:after {
    background: blue;
    color: #ffffff;
}