#page-container {
  flex: 1;
  overflow-x: hidden;
  background: #e4e4e4;
  
  #page > * {
    overflow-x: auto;
    background: #ffffff;
    margin: 1.25rem .75rem;
    box-shadow: 0em 0rem .5em .25em rgb(190, 190, 190, .7);
    -webkit-box-shadow: 0em 0em .5em .25em rgb(190, 190, 190, .7);  
    > * {
      display: block;
      padding: 1rem 1.5rem;
      overflow: visible;
      max-width: 100%;
    }
  }
}
